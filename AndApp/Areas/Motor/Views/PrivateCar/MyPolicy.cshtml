    #select2-drop {
        z-index: 111111111111111111111 !important;
    }

    td, th {
        font-size: 12px;
    }

    a,
    a label {
        cursor: pointer;
    }

    .table {
        margin-bottom: 0px;
    }

    th, td {
        white-space: nowrap;
    }

