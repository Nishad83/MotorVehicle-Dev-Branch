<style>
    #pageloader {
        /*background: rgba( 255, 255, 255, 0.8 );*/
        display: none;
        height: 100%;
        position: fixed;
        width: 100%;
        z-index: 9999;
    }

        #pageloader img {
            left: 38%;
            margin-left: -50px;
            margin-top: -32px;
            position: absolute;
            top: 20%;
