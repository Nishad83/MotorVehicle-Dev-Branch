            }
        });
    }
    $('#btnsearch').click(function () {

        $('#lblerror').html('');
        var errstr = "";

        var variantid = $('#variantid').val();
        var fromdate = $('#fromdate').val();
        var todate = $('#todate').val();

        if (fromdate != "" || todate != "") {
            if (fromdate == "") {
                errstr += "Please Enter from Date";

            } else if (todate == "") {
                errstr += "Please Enter Todate";

            }

        }

        if (errstr != "") {
            $('#lblerror').show();
            $('#lblerror').html(errstr);
            return false;
        }

        if (errstr == "") {
            return true;
        }

    });
</script>


